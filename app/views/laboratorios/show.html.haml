- model_class = Laboratorio
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @laboratorio.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @laboratorio.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), laboratorios_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_laboratorio_path(@laboratorio), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), laboratorio_path(@laboratorio), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
