- model_class = Peticionsoftware
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @peticionsoftware.title
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @peticionsoftware.user_id
%p
  %strong= model_class.human_attribute_name(:asignatura) + ':'
  %br
  = @peticionsoftware.asignatura
%p
  %strong= model_class.human_attribute_name(:titulacion) + ':'
  %br
  = @peticionsoftware.titulacion
%p
  %strong= model_class.human_attribute_name(:curso) + ':'
  %br
  = @peticionsoftware.curso
%p
  %strong= model_class.human_attribute_name(:sistemaoperativo) + ':'
  %br
  = @peticionsoftware.sistemaoperativo
%p
  %strong= model_class.human_attribute_name(:software) + ':'
  %br
  = @peticionsoftware.software
%p
  %strong= model_class.human_attribute_name(:dondeobtener) + ':'
  %br
  = @peticionsoftware.dondeobtener
%p
  %strong= model_class.human_attribute_name(:fechacomienzo) + ':'
  %br
  = @peticionsoftware.fechacomienzo
%p
  %strong= model_class.human_attribute_name(:cometario) + ':'
  %br
  = @peticionsoftware.cometario
%p
  %strong= model_class.human_attribute_name(:fechayhora) + ':'
  %br
  = @peticionsoftware.fechayhora
%p
  %strong= model_class.human_attribute_name(:cursoacademico_id) + ':'
  %br
  = @peticionsoftware.cursoacademico_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), peticionsoftwares_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_peticionsoftware_path(@peticionsoftware), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), peticionsoftware_path(@peticionsoftware), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
