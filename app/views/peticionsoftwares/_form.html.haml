= form_for @peticionsoftware, :html => { :class => 'form-horizontal' } do |f|
  .box
    .control-group
      = f.label :cursoacademico_id, :class => 'control-label'
      .controls
        = f.select :cursoacademico_id, options_for_select(Cursoacademico.all.map{|c| [c.name,c.id]})
    .control-group
      = f.label :titulacion, :class => 'control-label'
      .controls
        = f.text_field :titulacion, :class => 'text_field'
    .control-group
      = f.label :curso, :class => 'control-label'
      .controls
        - @cursos = ['Primero','Segundo','Tercero','Cuarto'] 
        = f.select(:curso, @cursos)
    .control-group
      = f.label "Asignatura", :class => 'control-label'
      .controls
        = f.text_field :asignatura, :class => 'text_field'
  .control-group
    = f.label "Sistema Operativo", :class => 'control-label'
    .controls
      - @platforms = ['Windows','Linux','Otro (Rellenar en comentario)'] 
      = f.select(:sistemaoperativo, @platforms) 
  .control-group
    = f.label 'Software y versiÃ³n', :class => 'control-label'
    .controls
      = f.text_area :software, :class => 'text_area', :size => '20x10'
  .control-group
    = f.label 'Donde Obtener el Software', :class => 'control-label'
    .controls
      = f.text_field :dondeobtener, :class => 'text_field'
  .control-group
    = f.label 'Fecha de Comienzo', :class => 'control-label'
    .controls
      = f.text_field :fechacomienzo, :class => 'date', 'data-behaviour' => 'datepicker'
  .control-group
    = f.label :comentario, :class => 'control-label'
    .controls
      = f.text_area :comentario, :class => 'text_area', :size => '20x10'
  .form-actions
    = f.submit 'Guardar', :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), peticionsoftwares_path, :class => 'btn'
